using namespace std;
#include <iostream>

int main()
{
    setlocale(0, "");
    int a=0;
    int b = 0;
    int c = 0;
    char arr[] = { 'a','a','a','c','d'};
    for (int i = 0; i < 5; i++)
    {
        if (arr[i] == arr[i+1])
        {
            a = a + 1;
        }
    }
    cout << "aрхивация" << endl;;
    cout << arr[1] << a<< endl;
    cout << arr[4] << b << endl;
    cout << arr[5] << c << endl;
    
    cout << endl << "обратно ";
    cout << "aaacd";
       
}
